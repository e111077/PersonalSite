{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "bower_components",
      "src",
      ".firebaserc",
      ".gitignore",
      "bower.json",
      "index.html",
      "polymer.json",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "/main",
        "destination": "build/bundled/index.html"
      },
      {
        "source": "/project/*",
        "destination": "build/bundled/index.html"
      },
      {
        "source": "/",
        "destination": "build/bundled/index.html"
      }
    ]
  }
}
